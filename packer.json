{
  "variables": {
    "kickstart_file_url": "https://raw.githubusercontent.com/AlexanderAllen/rhel-7-ks/master/anaconda_ks.cfg"
  },  
  "builders": [{
    "vm_name": "rhel71",
    "type": "vmware-iso",
    "iso_url": "rhel-workstation-7.1-x86_64-dvd.iso",
    "iso_checksum": "284b2280638a63a13ccd5266cabb7477d15aa1ff83b01a872f33235313daa61f",
    "iso_checksum_type": "sha256",
    "output_directory": "packer_rhel_7",
    "ssh_username": "root",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "shutdown -P now",
    "headless": "false",
    "tools_upload_flavor": "linux",
    "tools_upload_path": "/tmp/vmare_tools_linux.iso",
    "boot_wait": "5s",
    "boot_command": [
      "<tab> noshell text ks={{user `kickstart_file_url`}}<enter><wait>"
    ]
  }],
  "post-processors": [
    { 
      "type": "vagrant", 
      "compression_level": 6,
      "keep_input_artifact": false,
      "output": "packer_rhel7_{{.BuildName}}_{{.Provider}}.box"
    }
  ]  
}

